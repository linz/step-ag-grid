    "vitest": "^3.2.1",
    "vitest-canvas-mock": "^0.3.3"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
