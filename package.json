    "@vitest/ui": "^3.2.1",
    "ag-grid-community": "^33.3.1",
    "ag-grid-react": "^33.3.1",
    "babel-preset-react-app": "^10.1.0",
    "chromatic": "^11.28.2",
    "css-loader": "^7.1.2",
    "jsdom": "^26.1.0",
    "lodash-es": "^4.17.21",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.4",
    "postcss-loader": "^8.1.1",
